</div>
<table class="table">
    <tr>
        <th>
            No.
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle_Prestamo[0].FechaPago)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle_Prestamo[0].SaldoInicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle_Prestamo[0].Cuotas)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle_Prestamo[0].Avances)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle_Prestamo[0].PagoTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle_Prestamo[0].Capital)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle_Prestamo[0].Interes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle_Prestamo[0].BalanceFinal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle_Prestamo[0].InteresAcumulado)
        </th>
        <th></th>
    </tr>

    @{int i = 1; }
    @foreach (var item in Model.Detalle_Prestamo)
    {
        <tr>
            <td>
                @i
                @{i++;}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaldoInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuotas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avances)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PagoTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capital)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BalanceFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InteresAcumulado)
            </td>
        </tr>
    }
</table>


<div>
    <a asp-action="Edit" asp-route-id="@Model.PrestamoID">Edit</a> |
