}

<h1>Details</h1>

<div>
    <h4>Prestamo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MontoPrestamo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontoPrestamo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InteresAnual)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InteresAnual)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrediodoPrestamosAnnos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrediodoPrestamosAnnos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroPagosAnno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroPagosAnno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PagosAdicionales)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PagosAdicionales)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Contrasena)
        </dd>
